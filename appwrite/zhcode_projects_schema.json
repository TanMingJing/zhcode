{
  "name": "zhcode_projects",
  "description": "Stores project metadata. File contents are in Storage bucket 'zhcode_files'. fileRefs links to storage files.",
  "permissions": [],
  "attributes": [
    {
      "key": "userId",
      "type": "string",
      "status": "available",
      "required": true,
      "array": false,
      "size": 255,
      "description": "Owner user ID"
    },
    {
      "key": "projectName",
      "type": "string",
      "status": "available",
      "required": true,
      "array": false,
      "size": 255,
      "description": "Project display name"
    },
    {
      "key": "description",
      "type": "string",
      "status": "available",
      "required": false,
      "array": false,
      "size": 5000
    },
    {
      "key": "fileRefs",
      "type": "string",
      "status": "available",
      "required": true,
      "array": false,
      "size": 100000,
      "description": "JSON array of {filename, storageId, size, updatedAt}. storageId references files in zhcode_files bucket."
    },
    {
      "key": "mainFile",
      "type": "string",
      "status": "available",
      "required": true,
      "array": false,
      "size": 255,
      "description": "Main entry file name"
    },
    {
      "key": "language",
      "type": "string",
      "status": "available",
      "required": true,
      "array": false,
      "size": 10,
      "default": "zh"
    },
    {
      "key": "tags",
      "type": "string",
      "status": "available",
      "required": false,
      "array": true,
      "size": 1000
    },
    {
      "key": "isPublic",
      "type": "boolean",
      "status": "available",
      "required": false,
      "array": false,
      "default": false
    },
    {
      "key": "createdAt",
      "type": "datetime",
      "status": "available",
      "required": true,
      "array": false,
      "default": "now",
      "description": "Project creation timestamp"
    },
    {
      "key": "updatedAt",
      "type": "datetime",
      "status": "available",
      "required": true,
      "array": false,
      "default": "now",
      "description": "Last save/update timestamp"
    }
  ],
  "indexes": [
    {
      "key": "idx_userId",
      "type": "key",
      "attributes": ["userId"],
      "orders": ["ASC"]
    },
    {
      "key": "idx_updatedAt",
      "type": "key",
      "attributes": ["updatedAt"],
      "orders": ["DESC"]
    },
    {
      "key": "idx_projectName",
      "type": "key",
      "attributes": ["projectName"],
      "orders": ["ASC"]
    }
  ]
}
